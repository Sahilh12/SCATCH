<%- include('./partials/header') %>
    <% if (user.cart.length<=0) { %>
        <p class="px-10 py-20 text-2xl text-gray-400">Nothing yet..! <a href="/shop" class="text-blue-300"> Go to shop
                ☺</a>
        </p>
        <% } else { %>
            <% user.cart.forEach(function(item){ %>
                <div class="w-full flex px-20 py-20 gap-10">
                    <div class="w-60 ">
                        <div class="w-full h-52 flex items-center justify-center bg-[<%= item.bgcolor %>]">
                            <img class="h-[12rem] "
                                src="data:image/jpeg;base64,<%= item.productImage.toString('base64') %>" alt="">
                        </div>
                        <div
                            class="flex justify-between bg-[<%= item.panelColor %>] items-center px-4 py-4 text-[<%= item.textColor %>]">
                            <div>
                                <h3>
                                    <%= item.productName %>
                                </h3>
                                <h4>₹ <%= item.price %>
                                </h4>
                            </div>
                            <a class="w-7 h-7 flex items-center justify-center rounded-full bg-white"
                                href="/cart/<%=item.id%>">
                                <i class="ri-add-line "></i>
                            </a>
                        </div>
                    </div>
                    <div class="w-[70%]">
                        <h3 class="text-xl">Price Breakdown</h3>
                        <div class="px-10 mt-5">
                            <div class="flex mt-2">
                                <h4 class="w-1/3">Total MRP</h4>
                                <h4>₹ <%=item.price%>
                                </h4>
                            </div>
                            <div class="flex mt-2">
                                <h4 class="w-1/3">Discount (-)</h4>
                                <h4>₹ <%=item.discount%>
                                </h4>
                            </div>
                            <div class="flex mt-2">
                                <h4 class="w-1/3">Platform Fee</h4>
                                <h4>₹ 20</h4>
                            </div>
                            <div class="flex mt-2">
                                <h4 class="w-1/3">Shipping Fee</h4>
                                <h4>FREE</h4>
                            </div>
                        </div>
                        <div class="w-full h-[1px] bg-black mt-10"></div>
                        <div class="flex mt-5">
                            <h3 class="w-1/3 text-xl">Total Amount</h3>
                            <h3 class="font-semibold text-xl text-green-600">₹ <%=item.price - item.discount - 20 %>
                            </h3>
                        </div>
                        <a href="/remove/<%=item._id%>"><i class="fa-solid fa-trash text-red-400 mt-5"></i></a>
                        <form action=""></form>
                    </div>
                </div>
                <% }) %>
                    <% } %>

                        <%- include('./partials/footer') %>